.row-fluid
  .span12
    .page-header
      .row-fluid
        .span8
          %h1
            =@local.name
            %br/ 
            %small
              %p 
                =@local.location.address
                ="-"
                =@local.location.city
                ="/"
                =@local.location.state
                ="-"
                =@local.location.country
              %p
                -@local.categories.each do |c|
                  =image_tag c.icon, :alt => c.name, :title => c.shortName
          %ul.nav.nav-pills
            %li.active
              =link_to "Data about place", "#dados", "data-toggle" => "tab"
            %li
              =link_to "Data by place's categories", "#categoria", "data-toggle" => "tab"
            %li
              =link_to "Data by geolocation", "#geografica", "data-toggle" => "tab"
        .span4
          #map      
    .tab-content
      .tab-pane.active#dados
        =render "dados", :local => @local
      .tab-pane#categoria
        =render "categoria"
      .tab-pane#geografica
        Coming soon